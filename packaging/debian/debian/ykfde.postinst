#! /bin/sh

set -e

case "$1" in
    configure)
    if [ -x /usr/sbin/update-initramfs ]; then
        echo
        update-initramfs -u
    fi
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

